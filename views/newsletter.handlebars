<h2>Sign up for our newsletter! </h2>

<form action="/process?form=newsletter" method="post" class="form-horizontal">
    <input type="hidden" name="_csrf" value="{{csrf}}">
    <div class="form-group">
        <label class="col-sm-2 control-label" for="fieldName">Name</label>
        <div class="col-sm-4">
            <input class="form-control" type="text" name="name" id="fieldName">
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label" for="fieldEmail">Email</label>
        <div class="col-sm-4">
            <input class="form-control" type="email"  name="email" required id="fieldEmail">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-4">
            <button type="submit" class="btn btn-default">Register</button>
        </div>
    </div>
</form>